<h1>Editing Book</h1>
<%= form_with model: @book, url: book_path do |f| %>

<!--バリデーション-->
<% if @book.errors.any? %>
    <div class=errors>
      <div class=error-explanation>
        <%= @book.errors.count %>errors prohibited this book from being saved:  
      </div>
      <div class=error-detail>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>          
      </div>
    </div>
<!--IF文でエラー時のCSSを-->
<% end %>

<!--編集画面-->
  <h4>Title</h4>
   <%= f.text_field :title %>

  <h4>Body</h4>
   <%= f.text_area :body %>
   
   <br>
   <%= f.submit 'Update Book' %>


<% end %>

